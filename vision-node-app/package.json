{
    "name": "vision-node-app",
    "version": "1.0.0",
    "description": "Vision Chain Node - Desktop Application",
    "main": "src/main/index.js",
    "author": "Vision Chain <hello@visionchain.co>",
    "license": "MIT",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build:mac": "electron-builder --mac",
        "build:win": "electron-builder --win",
        "build:all": "electron-builder --mac --win"
    },
    "dependencies": {
        "better-sqlite3": "^11.0.0",
        "express": "^4.21.0",
        "ws": "^8.16.0"
    },
    "devDependencies": {
        "electron": "^33.4.11",
        "electron-builder": "^25.0.0"
    },
    "build": {
        "appId": "co.visionchain.node",
        "productName": "Vision Node",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "resources/**/*",
            "node_modules/**/*"
        ],
        "mac": {
            "category": "public.app-category.utilities",
            "icon": "resources/icon.icns",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                }
            ],
            "darkModeSupport": true
        },
        "win": {
            "icon": "resources/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": true,
            "perMachine": false,
            "allowToChangeInstallationDirectory": false
        },
        "dmg": {
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        }
    }
}
